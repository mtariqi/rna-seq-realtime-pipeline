// ============================================================
// nextflow.config
// Author: MD Tariqul Islam (Tariq)
// Purpose: Config for local RNA-seq demo pipeline
// ============================================================

params {
    reads      = "data/test.fastq.gz"
    outdir     = "results"
    max_cpus   = 4
    max_memory = '8 GB'
}

// ------------------- Executor -------------------
process {
    executor = 'local'          // change to 'slurm' for HPC
    cpus     = params.max_cpus
    memory   = params.max_memory
    time     = '1h'
}

// ------------------- Docker / Conda -------------------
singularity {
    enabled = false
}
docker {
    enabled = false
}
conda {
    enabled = true
}

// ------------------- Reports -------------------
timeline {
    enabled = true
    file = "${params.outdir}/timeline.html"
}
trace {
    enabled = true
    file = "${params.outdir}/trace.txt"
}
report {
    enabled = true
    file = "${params.outdir}/report.html"
}
dag {
    enabled = true
    file = "${params.outdir}/pipeline_dag.png"
}
